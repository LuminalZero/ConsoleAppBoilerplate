{
    "NLog": {
        "throwConfigExceptions": true,
        "targets": {
            "async": true,
            "ErrorFile": {
                "type": "File",
                "fileName": "${basedir}\\logs\\error\\${shortdate}.log",
                "keepFileOpen": false,
                "layout": "${longdate}|${level:uppercase=true}|${logger}|${message}|${all-event-properties}${exception:format=tostring}"
            },
            "TraceFile": {
                "type": "File",
                "fileName": "${basedir}\\logs\\trace\\${shortdate}.log",
                "keepFileOpen": false,
                "layout": "${longdate}|${level:uppercase=true}|${logger}|${message}|${all-event-properties}${exception:format=tostring}"
            },
            "LogConsole": {
                "type": "ColoredConsole",
                "layout": "${longdate}|${level:uppercase=true}|${logger}|${message}|${all-event-properties}${exception:format=tostring}",
                "useDefaultRowHighlightingRules": false,
                "wordHighlightingRules": [
                    {
                        "regex": "FATAL",
                        "foregroundColor": "Red",
                        "backgroundColor": "White"
                    },
                    {
                        "regex": "ERROR",
                        "foregroundColor": "Red"
                    },
                    {
                        "regex": "WARN",
                        "foregroundColor": "DarkYellow"
                    },
                    {
                        "regex": "INFO",
                        "foregroundColor": "Green"
                    },
                    {
                        "regex": "DEBUG",
                        "foregroundColor": "Blue"
                    },
                    {
                        "regex": "TRACE",
                        "foregroundColor": "White"
                    }
                ]
            }
        },
        "rules": {
            "IgnoreMicrosoft": {
                "logger": "Microsoft.*",
                "maxLevel": "Error",
                "final": true
            },
            "LogTrace": {
                "logger": "*",
                "minLevel": "Trace",
                "writeTo": "TraceFile"
            },
            "LogConsole": {
                "logger": "*",
                "minLevel": "Debug",
                "writeTo": "LogConsole"
            },
            "LogError": {
                "logger": "*",
                "minLevel": "Error",
                "writeTo": "ErrorFile"
            }
        }
    }
}
